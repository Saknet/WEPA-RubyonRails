<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th> rated beers</th>
      <th> total ratings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user, class: "btn btn-link" %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td><% if user.suspended %>
              <button class="btn btn-info">account frozen</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-success" %>