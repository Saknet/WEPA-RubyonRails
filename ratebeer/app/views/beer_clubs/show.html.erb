<p id="notice"><%= notice %></p>

<p>
  <strong><%= @beer_club.name %>   <%= @beer_club.city %> </strong>
</p>

<p>
  Founded: <%= @beer_club.founded %>
</p>

<strong>Members </strong>

<ul>
  <% @beer_club.users.each do |user| %>
      <li><%= link_to user.username, user %> </li>
  <% end %>
</ul>

<% if current_user and not @beer_club.is_member?(current_user) %>

    <h4>Join a club</h4>

    <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beer_club_id%>
        <%= f.submit value:"join the club" %>
    <% end %>
<% end %>

<% if current_user and @beer_club.is_member?(current_user) %>

    <%= form_for(@membership, method: "delete") do |f| %>
        <%= f.hidden_field :beer_club_id%>
        <%= f.submit value:"end the membership" %>
    <% end %>
<% end %>

<br>
<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user%>
<br>
<%= link_to 'Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>
